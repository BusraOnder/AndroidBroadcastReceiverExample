<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.example.broadcastreceiverpermissionapp01">

	<uses-permission android:name="my.permission" />

	<queries>
		<package android:name="com.example.broadcastreceiverpermissionapp02" />
	</queries>


	<application
		android:allowBackup="true"
		android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name"
		android:roundIcon="@mipmap/ic_launcher_round"
		android:supportsRtl="true"
		android:theme="@style/Theme.BroadcastReceiverPermissionApp01">
		<activity android:name=".MainActivity">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />

				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<receiver android:name=".BroadcastingClass" android:exported="true">
			<intent-filter>
				<action android:name="my.signal"></action>
			</intent-filter>
		</receiver>
	</application>

</manifest>